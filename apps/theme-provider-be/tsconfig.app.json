{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "paths": {
      "@app/*": ["*"],
      "@controllers/*": ["apps/theme-provider-be/src/app/controllers/*"],
      "@modules/*": [ "apps/theme-provider-be/src/app/modules/*"]
    }
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
